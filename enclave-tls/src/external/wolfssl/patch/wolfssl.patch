+				&der->extensionsSz,
+				der->quote, der->quoteSz);
+		if (ret <= 0)
+			return EXTENSIONS_E;
+
+	}
+
+	if (der->lareportSz > 0) {
+		ret = SetExtensions(der->extensions, sizeof(der->extensions),
+				&der->extensionsSz,
+				der->lareport, der->lareportSz);
+		if (ret <= 0)
